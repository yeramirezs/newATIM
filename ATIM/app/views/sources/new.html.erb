      <%= form_for :source, :method => :post do |f| %>

        <%= f.hidden_field :thesis_id, :value=>@thesis.id %>
        <%= f.label  :title, 'Title'  %>
        <%= f.text_field  :title  %>

        <%= f.label :url, 'URL'  %>
        <%= f.text_field  :url  %>

        <div width="50%" >
          <%= f.label :citation, 'Citation' %>
          <%= f.text_area :citation, :class=> 'text', :rows => 6, :cols => 25 %>
        </div>

        <%= f.hidden_field :analysis, :value=> '' %>

        <%= f.submit 'Save new source' %>
      <%end%>

      <div class="link">
        <br> <br>
        <%= link_to 'Regresar', thesis_path(:id =>@thesis.id, :id2 =>@teacher.id), class: "btn btn-large btn-primary"%>
